<!-- start compétences -->
<section class="section bg-light" id="competences">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="text-center mb-5">
          <h2 class="mb-3 h3 fw-semibold lh-base">Mes compétences</h2>
          <p class="text-muted mb-4">Ce que j'ai appris pendant mon parcours</p>
        </div>
      </div>
    </div>
        
    <div class="row">
      {% for type in skills.keys %}
        <div class="col-lg-4">
          <div class="card card-animate rounded-3">
            <div class="card-body">
              <h5 class="card-title text-primary text-center">{{ type|capitalize }}</h5>
              <div class="row row-cols-2 g-2">
                {% for skill in skills.data[type] %}
                  <div class="col-6">
                    <div class="skill">
                      <img src="{{ asset(skill.logo) }}" srcset="{{ asset(skill.logo) }}" title="Logo de {{ skill.name }}" alt="Logo de {{ skill.name }}" width="50" height="32">
                      <p class="text-black skill-name">{{ skill.name }}</p>
                      <small class="text-muted skill-level">{{ skill.niceLevel }}</small>
                    </div>
                  </div>
                {% endfor %}
                </div>
              </div>
            </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<!-- end compétences -->